%header.post-header
  %h1= link_to post.title, post.full_url
  .posted
    %span{"data-blog" => "time"}
      %time{datetime: post.published_at}= I18n.localize(post.published_at.to_date, format: :long)
    %span{"data-blog" => "user"}
      = post.user.name
    %span{"data-blog" => "disqus"}
      %a{href: post.full_url + "#disqus_thread"}
